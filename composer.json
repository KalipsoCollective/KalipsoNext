{
    "name": "halillusion/kalipso_next",
    "type": "project",
    "description": "Kalipso Next - a simple php framework/boilerplate",
    "keywords": ["framework", "kalipso", "kalipsonext"],
    "license": "MIT",
    "require": {
        "php": "^7.1|^8.0",
        "verot/class.upload.php": "^2.1",
        "phpmailer/phpmailer": "^6.5",
        "izniburak/pdox": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
